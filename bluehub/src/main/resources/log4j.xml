<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
   
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

 <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
       <layout class="org.apache.log4j.PatternLayout"> 
          <param name="ConversionPattern" value="%d %-5p %c.%M:%L - %m%n"/> 
       </layout> 
    </appender>

    <appender name = "WARN_FILE" class = "org.apache.log4j.RollingFileAppender">
    	<param name="Threshold" value="WARN"/>
        <param name = "File" value = "/usr/local/deploy/logs/bluehub_warn.log"/>
        <param name = "MaxFileSize" value = "50MB"/>
        <param name = "MaxBackupIndex" value = "5"/>
        <layout class = "org.apache.log4j.PatternLayout">
            <param name = "ConversionPattern" value = "[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </layout>
         <filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="WARN" />
		</filter>
    </appender>
     <appender name = "ERROR_FILE" class = "org.apache.log4j.RollingFileAppender">
    	<param name="Threshold" value="ERROR"/>
        <param name = "File" value = "/usr/local/deploy/logs/bluehub_error.log"/>
        <param name = "MaxFileSize" value = "50MB"/>
        <param name = "MaxBackupIndex" value = "5"/>
        <layout class = "org.apache.log4j.PatternLayout">
            <param name = "ConversionPattern" value = "[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </layout>
         <filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="ERROR" />
		</filter>        
    </appender>
    <appender name = "INFO_FILE" class = "org.apache.log4j.RollingFileAppender">
    	<param name="Threshold" value="INFO"/>
        <param name = "File" value = "/usr/local/deploy/logs/bluehub_info.log"/>
        <param name = "MaxFileSize" value = "50MB"/>
        <param name = "MaxBackupIndex" value = "5"/>
        <layout class = "org.apache.log4j.PatternLayout">
            <param name = "ConversionPattern" value = "[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </layout>
         <filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="INFO" />
		</filter>
    </appender>
    <appender name = "DEBUG_FILE" class = "org.apache.log4j.RollingFileAppender">
    	<param name="Threshold" value="DEBUG"/>
        <param name = "File" value = "/usr/local/deploy/logs/bluehub_debug.log"/>
        <param name = "MaxFileSize" value = "50MB"/>
        <param name = "MaxBackupIndex" value = "5"/>
        <layout class = "org.apache.log4j.PatternLayout">
            <param name = "ConversionPattern" value = "[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="DEBUG" />
		</filter>
    </appender>
    <appender name = "ALL_FILE" class = "org.apache.log4j.RollingFileAppender">
    	<param name="Threshold" value="ALL"/>
        <param name = "File" value = "/usr/local/deploy/logs/bluehub_all.log"/>
        <param name = "MaxFileSize" value = "50MB"/>
        <param name = "MaxBackupIndex" value = "5"/>
        <layout class = "org.apache.log4j.PatternLayout">
            <param name = "ConversionPattern" value = "[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </layout>
    </appender>
    <category name = "com.bluehub">
        <priority value = "debug"/>
    </category>
    <category name = "org.*">
        <priority value = "error"/>
    </category>
    
    <logger name="org.springframework">
    <level value="off"/>
   </logger>
   
  <!--  <logger name="org.hibernate">
    <level value="on"/>
</logger> -->
    
    <root>   	
       
       <appender-ref ref = "WARN_FILE"/> 
        <appender-ref ref = "ERROR_FILE"/> 
        <appender-ref ref = "INFO_FILE"/>   
        <appender-ref ref = "DEBUG_FILE"/> 
         <appender-ref ref = "STDOUT"/> 
        <appender-ref ref = "ALL_FILE"/> 
    </root>    
</log4j:configuration>


